# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                         controllers.Application.index
GET         /index.html                               controllers.Application.index
GET         /products                                 controllers.Application.listProducts
# User Management Module
GET         /signup                                   controllers.User_Controller.signupform()
POST        /signup                                   controllers.User_Controller.signup()
GET         /login                                    controllers.User_Controller.login()
POST        /login                                    controllers.User_Controller.authenticate()
GET         /api/user                                 controllers.User_Controller.currentUser()
GET         /api/user/:id                             controllers.User_Controller.getUser(id: Long)
GET         /api/user/username/:name                  controllers.User_Controller.getUserByName(name: String)
GET         /api/instructor/:name                       controllers.User_Controller.getInstructor(name: String)



GET         /profile                                  controllers.User_Controller.profile()
POST        /profile                                  controllers.FileUpload.upload()

GET         /course                                   controllers.User_Controller.course()
GET         /logout                                   controllers.User_Controller.logout()
GET         /listAllUsers                             controllers.User_Controller.listAll()
GET         /feedback                                 controllers.User_Controller.feedback()
GET         /quiz                                     controllers.User_Controller.quiz()
GET         /teaching                                 controllers.User_Controller.teaching()
GET         /learning                                 controllers.User_Controller.learning()
GET         /videotime                                controllers.User_Controller.videotime()
GET         /videohistory                             controllers.User_Controller.videohistory()

# Course Management Module
GET         /coursecreate                             controllers.CourseController.createIndex()
GET         /lessoncreate                             controllers.CourseController.createLesson()
GET         /api/courses                              controllers.CourseController.listCourses()
GET         /api/courses/:instructorname              controllers.CourseController.getCourses(instructorname: String)
GET         /api/coursesbyname/:name                  controllers.CourseController.getCourseByName(name: String)
POST        /api/courses                              controllers.CourseController.create()
GET         /api/course/:courseid                     controllers.CourseController.getCourse(courseid: String)
GET         /api/courses/instructor/:id               controllers.CourseController.getCoursesByInstructorId(id: String)

POST        /api/course/take/:userid/:courseid        controllers.CourseController.takerCourse(userid: Long, courseid: Long)
GET         /api/courses/registered/:userid           controllers.CourseController.registeredCourses(userid: Long)

# Lesson Management Module
POST        /api/lesson                               controllers.LessonController.create()
GET         /api/lesson/:courseid                     controllers.LessonController.getLessons(courseid:Long)
GET         /api/lessons                              controllers.LessonController.listLessons()



# Lesson Management Module
POST         /api/lesson          controllers.LessonController.create()
GET          /api/lesson/:courseid        controllers.LessonController.getLessons(courseid:Long)
GET          /api/lessons          controllers.LessonController.listLessons()



# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                             controllers.Assets.at(path="/public", file)
GET         /angular-busy.html                        controllers.Assets.at(path="/public", file="/html/angular-busy.html")
